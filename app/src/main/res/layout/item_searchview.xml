<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <ImageView
            android:id="@+id/offer_image"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/demopic1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/offer_price_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="429 BDT"
            android:textColor="@color/red"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/offer_image"
            app:layout_constraintTop_toBottomOf="@+id/offer_Title_id" />



        <TextView
            android:id="@+id/add_item_id"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:padding="2dp"
            android:text="ADD"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_Title_id" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="1"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/add_item_id"
            app:layout_constraintTop_toBottomOf="@+id/offer_image" />


        <TextView
            android:id="@+id/offer_Title_id"
            android:layout_width="121dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:text="Pureit Kit "
            app:layout_constraintStart_toEndOf="@+id/offer_image"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/shoplogo"
            android:layout_width="49dp"
            android:layout_height="43dp"
            app:layout_constraintBottom_toBottomOf="@+id/offer_image"
            app:layout_constraintEnd_toEndOf="@+id/offer_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>